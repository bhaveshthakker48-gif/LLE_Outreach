<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_shape_doctor"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblRegNo"
                        style="@style/text_view_style"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:text="Sr. No."/>

                    <EditText
                        android:id="@+id/txtRegNo"
                        style="@style/edit_text_style"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_gravity="center"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text" />

                    <ImageView
                        android:id="@+id/imgPatientPhoto"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:elevation="2dp"
                        android:src="@mipmap/questionset" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_shape_doctor"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtFName"
                            style="@style/edit_text_style"
                            android:hint="First name*"
                            android:inputType="textCapWords"
                            android:maxLength="50" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtMName"
                            style="@style/edit_text_style"
                            android:hint="Middle Name"
                            android:inputType="textCapWords"
                            android:maxLength="50" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtLName"
                            style="@style/edit_text_style"
                            android:hint="Last name*"
                            android:inputType="textCapWords"
                            android:maxLength="50" />
                    </com.google.android.material.textfield.TextInputLayout>



                        <Spinner
                            android:id="@+id/spnGender"
                            style="@style/spinner_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="bottom"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtDOB"
                            style="@style/edit_text_style"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="Date Of Birth*"
                            android:inputType="number"
                            android:maxLength="50" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtAge"
                            style="@style/edit_text_style"
                            android:hint="Age"
                            android:inputType="number"
                            android:maxLength="50" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/spnAgeUnit"
                        style="@style/spinner_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_gravity="bottom"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_shape_doctor"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtHouseNoName"
                            style="@style/edit_text_style"
                            android:hint="House no/name"
                            android:inputType="textPostalAddress|textCapSentences"
                            android:maxLength="200" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtStreetName"
                            style="@style/edit_text_style"
                            android:hint="Street name"
                            android:inputType="textPostalAddress|textCapSentences"
                            android:maxLength="200" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtLocality"
                            style="@style/edit_text_style"
                            android:hint="Locality/Area/Pada*"
                            android:inputType="textPostalAddress|textCapSentences"
                            android:maxLength="200" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtCity"
                            style="@style/edit_text_style"
                            android:hint="City/Town/Village*"
                            android:inputType="textPostalAddress|textCapSentences"
                            android:maxLength="100" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtTaluka"
                            style="@style/edit_text_style"
                            android:hint="Taluka*"
                            android:inputType="textCapWords"
                            android:maxLength="100" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtDistrict"
                            style="@style/edit_text_style"
                            android:hint="District*"
                            android:inputType="textCapWords"
                            android:maxLength="100" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <org.impactindia.llemeddocket.view.FontedAutoCompleteTextView
                            android:id="@+id/autoTxtState"
                            style="@style/edit_text_style"
                            android:hint="State"
                            android:inputType="textCapWords"
                            android:maxLength="100" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtPincode"
                            style="@style/edit_text_style"
                            android:hint="Pincode"
                            android:inputType="number"
                            android:maxLength="6" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <org.impactindia.llemeddocket.view.FontedAutoCompleteTextView
                            android:id="@+id/autoTxtCountry"
                            style="@style/edit_text_style"
                            android:hint="Country*"
                            android:text="India"
                            android:inputType="textCapWords"
                            android:maxLength="100" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_shape_doctor"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtMobileNo"
                            style="@style/edit_text_style"
                            android:hint="Mobile No."
                            android:inputType="number"
                            android:maxLength="10" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtResidenceNo"
                            style="@style/edit_text_style"
                            android:hint="Residence No."
                            android:inputType="number"
                            android:maxLength="11" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtAadharNo"
                            style="@style/edit_text_style"
                            android:hint="Aadhar No."
                            android:inputType="number"
                            android:maxLength="12" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtEmailId"
                            style="@style/edit_text_style"
                            android:hint="Email Id"
                            android:inputType="textEmailAddress"
                            android:maxLength="100" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/text_view_small_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="Select Tags"/>
                    <TextView
                        style="@style/text_view_small_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text=""/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <org.impactindia.llemeddocket.view.MultiSelectionSpinner
                        android:id="@+id/mulSelSpnAssignTag"
                        style="@style/spinner_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/txtRefBy"
                            style="@style/edit_text_style"
                            android:hint="Referred By"
                            android:inputType="textCapWords"
                            android:maxLength="100" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnRegister"
                        style="@style/button_style"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="Register" />

                    <!--<Button-->
                        <!--android:id="@+id/btnCancel"-->
                        <!--style="@style/button_style"-->
                        <!--android:text="Clear" />-->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>